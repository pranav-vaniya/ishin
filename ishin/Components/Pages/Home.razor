@page "/"

@if (showSplashScreen == true)
{
	<Splash></Splash>
}
else
{
	<MudText Typo="Typo.h1" Class="default-text-color">ishin</MudText>
	<MudText Typo="Typo.h6" Class="default-text-color">Welcome to ishin</MudText>
	<MudText Typo="Typo.body1" Class="default-text-color">This is some body text</MudText>
}

@code {
	bool showSplashScreen = true;

	protected override async Task OnInitializedAsync()
	{
		_ = HideSplashScreen();
	}

	async Task HideSplashScreen()
	{
		await Task.Delay(4500);
		showSplashScreen = false;
		StateHasChanged();
	}
}